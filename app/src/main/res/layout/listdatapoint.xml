<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/listidhadiah"
        android:layout_alignParentStart="true"
        android:padding="14dp"
        android:layout_marginTop="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            >

            <TextView
                android:id="@+id/listpointnokartu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/listpointwaktu"
                android:text="nokartu"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/listpointadmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/listpointid"
                android:layout_marginStart="68dp"
                android:layout_toEndOf="@+id/listpointid"
                android:text="admin"
                android:textColor="@color/place_autocomplete_prediction_secondary_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/listpointwaktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/listpointnokartu"
                android:layout_marginStart="64dp"
                android:layout_marginTop="8dp"
                android:text="waktu"
                android:textColor="@color/place_autocomplete_prediction_secondary_text"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/listpointid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/listtransnokartu"
                android:layout_alignBottom="@+id/listtransnokartu"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/listpointtanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/listpointwaktu"
                android:layout_marginStart="9dp"
                android:layout_toEndOf="@+id/listpointwaktu"
                android:text="tanggal"
                android:textColor="@color/place_autocomplete_prediction_secondary_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/listpointini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/listpointadmin"
                android:layout_alignTop="@+id/listpointtanggal"
                android:text="1 Point"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                app:srcCompat="@drawable/ic_stars_color_24dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

