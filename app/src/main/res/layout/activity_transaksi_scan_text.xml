<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="id.sch.smkn13bdg.adhi.brilinkadminarkan.modulbtmtransaksi.TransaksiScanTextActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/formtransaksi"
        android:padding="15dp"
        android:visibility="visible">

        <Button
            android:id="@+id/btntransasiscan"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCAN" />

        <EditText
            android:id="@+id/edittransaksinokartu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nomor Kartu"
            android:inputType="text"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="5dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edittransaksitujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No Rekening Tujuan"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:id="@+id/edittransaksinominal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nominal"
            android:textStyle="bold"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/edittransaksipenerima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Penerima"
            android:inputType="text"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:id="@+id/edittransaksibank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bank"
            android:inputType="text"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BIAYA ADMINISTRASI"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="12dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txtviewtransaksitarif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp. 0 "
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btntransaksiloadtarif"
            android:layout_marginTop="10dp"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CEK TARIF" />

        <Button
            android:id="@+id/btntransasiproses"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PROSES" />

    </LinearLayout>

</LinearLayout>
